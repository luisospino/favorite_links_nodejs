<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action = '/links/update/{{link.id}}' method = 'POST'>
                        <div class="form-group">
                            <input type="text" value = "{{link.title}}" class= "form-control" name = 'title' placeholder="title">
                        </div>
                        <div class="form-group">
                            <input type="url" value = "{{link.url}}" class= "form-control" name = 'url' placeholder="url">
                        </div>
                        <div class="form-group">
                            <textarea type="textarea" rows="2" class= "form-control" name = 'description' placeholder="description">{{link.description}}</textarea>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>